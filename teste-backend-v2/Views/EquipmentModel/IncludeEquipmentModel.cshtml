@model teste_backend_v2.ViewModels.EquipmentModelViewModels.IncludeEquipmentModelViewModel

@{
    ViewData["Title"] = "Include";
}

<h1>Include</h1>

<h4>Equipment Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IncludeEquipmentModel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="width: 100%;"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Include" class="btn btn-primary" /> |
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("ListEquipmentModel", "Equipments")'">Back to list</button> 
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}