@page
@model WebApp.Pages.Equipments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Equipments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipment[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-page="./LastPosition" asp-route-id="@item.Id">Last Positon</a> |
                <a asp-page="./LastState" asp-route-id="@item.Id">Last State</a> |
                <a asp-page="./PositionHistory" asp-route-id="@item.Id">Position History</a> |
                <a asp-page="./StateHistory" asp-route-id="@item.Id">State History</a> |
            </td>
        </tr>
}
    </tbody>
</table>
